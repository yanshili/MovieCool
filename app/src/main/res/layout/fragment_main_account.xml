<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHoloGreen"
    android:orientation="vertical"
    tools:context="com.coolcool.moviecool.fragment.MainAccountFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/accountCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/size_m"
        android:layout_gravity="top"
        app:cardElevation="@dimen/size_s"
        app:cardCornerRadius="@dimen/size_ms">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageAccountFragment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/size_s"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_m"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAccountFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tvAccountPromptFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/favoriteCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/size_m"
        android:layout_gravity="top"
        app:cardElevation="@dimen/size_s"
        app:cardCornerRadius="@dimen/size_ms">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageFavoriteFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/size_s"
                android:tint="@android:color/holo_orange_light"
                app:srcCompat="@drawable/ic_star_24dp"
                />

            <TextView
                android:id="@+id/textFavoriteFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_m"
                android:text="我的收藏"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/aboutCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/size_m"
        android:layout_gravity="top"
        app:cardElevation="@dimen/size_s"
        app:cardCornerRadius="@dimen/size_ms">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageAboutFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/size_s"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_info_24dp"
                />

            <TextView
                android:id="@+id/textAboutFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_m"
                android:text="关于本应用"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
