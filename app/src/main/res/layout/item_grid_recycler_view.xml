<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_s"
    app:cardCornerRadius="@dimen/size_ms"
    app:cardElevation="@dimen/size_s">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recyclerGridItemImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewAspectRatio="0.7"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recyclerGridItemImageView"
            android:layout_alignTop="@+id/recyclerGridTextView"
            android:background="@drawable/bg_gradient_selector"
            android:saveEnabled="true"
            />

        <TextView
            android:id="@+id/recyclerGridTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recyclerGridItemImageView"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:gravity="center"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>