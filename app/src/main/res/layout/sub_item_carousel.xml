<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/carouselFrame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_mm"
    android:layout_marginRight="@dimen/size_mm"
    android:layout_marginLeft="@dimen/size_mm"
    android:layout_gravity="center"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpCarouselImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:saveEnabled="true">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/llCarouselDotContainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_gradient_black_white"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/size_s">
    </LinearLayout>

    <TextView
        android:id="@+id/tvCarouselTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:padding="4dp"
        android:singleLine="true"
        android:text="这是轮播图片的描述"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        />

</android.support.v7.widget.CardView>